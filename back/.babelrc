{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": {
          "node": "current"
        }
      }
    ],
    "@babel/typescript"
  ],
  "plugins": [
    [
      "module-resolver",
      {
        "extensions": [".ts"],
        "root": ["./src"],
        "alias": {
          "~/*": "./src"
        }
      }
    ]
  ],
  "comments": false,
  "ignore": ["./src/*/*.test.ts"]
}
